<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 1.6//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/1.6/template-install.dtd">
<extension version="1.6" type="template" method="upgrade">
	<name>GoRed_ULTRA_LernVid.com-j1.6</name>
	<creationDate>Apr 2011</creationDate>
	<author>Juergen Koller</author>
	<copyright>Copyright LernVid.com</copyright>
	<authorEmail>webmaster@lernvid.com</authorEmail>
	<authorUrl>http://www.lernvid.com</authorUrl>
	<version>1.0</version>
	<description>
		&lt;h1&gt;The GoRed ULTRA Joomla Template for Joomla 1.6&lt;/h1&gt;
		&lt;h2&gt;Version: 1.0&lt;/h2&gt;
		&lt;h2&gt;&lt;a href="http://www.lernvid.com" target="_blank"&gt;Authors Homepage&lt;/a&gt;&lt;br /&gt;
		&lt;a href="http://www.lernvid.com/lizenz" target="_blank"&gt;Licence Information&lt;/a&gt;&lt;br /&gt;&lt;/h2&gt;
		&lt;img src="../templates/gored_ultra_lernvid.com-j1.6/template_thumbnail.png" style="float:left; padding:10px 10px 10px 0;" /&gt;
	</description>
	<files>
		<folder>css</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>js</folder>
		<filename>index.php</filename>
		<filename>index.html</filename>
		<filename>template_thumbnail.png</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
		     	<field name="useJavascript" type="radio" default="1" label="Use Javascript?" description="Here you can decide if you want to use the Javascript Effects in the Template or not.">
			      <option value="0">No</option>
			      <option value="1">Yes</option>
			    </field>
				<field name="CopyrightInfo" type="textarea" rows="5" cols="40" default="Your Copyright Text here!" label="CopyrightInfo" description="Here you can enter a copright descrition that will be visible in the bottom of the page. - You can also add an image with with html code"></field>
			</fieldset>
		</fields>
	</config>
	<positions>
		<position>position-0</position>
		<position>position-1</position>
		<position>position-2</position>
		<position>position-7</position>
		<position>position-8</position>
		<position>top</position>
		<position>footer</position>
		<position>user1</position>
		<position>user2</position>
		<position>user5</position>
		<position>user6</position>
		<position>debug</position>
	</positions>
</extension>